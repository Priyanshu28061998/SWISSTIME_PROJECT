<% include ./partials/header %>
<% if (session.cart.totalQty>0){ %>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                <% products.forEach(function(products){ %>
                    <li class="list-group-item">
                        <span class="badge"><%= products.qty %></span>
                        <span style="font-weight: bold"><%= products.item.title %></span>
                        <span class="label label-primary"><strong>Rs</strong><%= products.price %></span>
                    </li>
                <% }) %>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
            <strong>Total: <%= totalPrice %></strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
            <a href="/checkout" class="btn btn-success">Checkout</a>
            <a href="/home" class="btn btn-primary">Go Back</a>
        </div>
    </div>
    <% } %>
    <% if (session.cart.totalQty==0){ %>
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
            <h2>No Items in Cart yet!</h2>
        </div>
        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
            <a href="/home"><button class="btn btn-primary btn-lg">Go Back</button></a>
        </div>
    </div>
    <% } %>
    <% include ./partials/footer %>